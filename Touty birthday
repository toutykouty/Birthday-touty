 <script>  
  function showPage(num) {  
    document.querySelectorAll('.page').forEach(page => {  
      page.style.display = 'none';  
    });  
    const page = document.getElementById('page' + num);  
    if (page) {  
      page.style.display = 'flex';  
    }  
  }  
</script>  </body>  
